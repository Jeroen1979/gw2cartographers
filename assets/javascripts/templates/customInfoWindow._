<div id="name" class="<%= type %>-marker">
    <h2><%= title %></h2>
    <p class="desc">
        <%= desc %> 
        <% if(wikiLink !== "") {%>
        <a href="<%= wikiLink %>">More infos on wiki.guildwars2.com</a>
        <% }%>
    </p>
</div>
<form style="display: none;" action="javacript:" id="edit-form-<%= id %>">
    <label>
        <span class="label">Title</span>
        <input type="text" name="marker-title" value="<%= title %>" >
    </label>
    <label>
        <span class="label">Description</span>
        <textarea name="marker-description" rows="8" cols="40"><%= desc %></textarea>
    </label>
    <label>
        <span class="label">Wiki link</span>
        <input type="text" name="marker-wiki" value="<%= wikiLink %>" >
    </label>
    <button type='submit'>send</button>
</form>